<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.weidongjian.weigan.sunshine" >
    
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".main"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.weidongjian.weigan.sunshine.DetailActivity"
            android:label="@string/title_activity_detail"
            android:parentActivityName="com.weidongjian.weigan.sunshine.main">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value="com.weidongjian.weigan.sunshine.main" />
        </activity>
        <activity android:name=".SettingActivity"
            android:label="@string/setting"
            android:parentActivityName=".main">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value="com.weidongjian.weigan.sunshine.main"/>
        </activity>
        <activity android:name=".SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".main">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value="com.weidongjian.weigan.sunshine.main"/>
        </activity>
        <provider
            android:authorities="com.weidongjian.weigan.sunshine.Data"
            android:name=".Data.WeatherProvider"/>
    </application>

</manifest>

